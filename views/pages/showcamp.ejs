<% layout('./layouts/boilerplate') %>
  <div class="row">
    <div class="card col-6 offset-1 mb-5">
      <img style="width:100%;" src="<%= campground.image %>" alt="">
      <div class="card-body">
        <h1 class="card-title">
          <%= campground.title %>
        </h1>
        <p class="card-text">
          <%= campground.discription %>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><span class="fw-bold">Price: </span>$<%= campground.price%>
        </li>
        <li class="list-group-item"><span class="fw-bold">Location: </span>
          <%= campground.location%>
        </li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds/edit/<%=campground._id%>" class="card-link btn btn-success">Edit</a>
        <form class="d-inline-block" method="post" action="/campgrounds/<%=campground._id%>?_method=delete">
          <button class="card-link btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-primary" href="/campgrounds">back to background</a>
      </div>
    </div>
    <div class="col-3">
      <%- include('../partials/review.ejs',{reviews:campground.reviews}) %>
    </div>
  </div>
  </div>
  <div class="col-3 offset-1">
    <h3>Add Review</h3>
    <form method="post" action="/campgrounds/<%=campground._id %>/review/new" class="needs-validation mb-5" novalidate>
      <label class="form-label" for="rating">Rating</label>
      <input class="form-range " type="range" name="rating" id="rating" min="1" max="5" required>
      <label class="form-label" for="content">Review</label>
      <textarea class="form-control" name="content" id="content" cols="30" rows="4"></textarea>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>