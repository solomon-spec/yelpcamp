<% layout('./layouts/boilerplate') %>
    <div class="row">
    <div class="col-6 offset-3">
    <h1 class="text-center">New Campground</h1>
    <form method="post"action="/campgrounds/new" novalidate class="needs-validation">
        <label class="form-label" for="title">Title</label>
        <input class="form-control mb-3" type="text" name="title" id="title" required>
        <label class="form-label" for="location">Location</label>
        <input class="form-control mb-3" type="text" name="location" id="location" required>
        <label class="form-label" for="img-url">Image Url</label>
        <input class="form-control mb-3" type="text" name="image" id="image" required>
        <label class="form-label" for="price">Campground price</label>
        <input class="form-control mb-3" type="text" id="price" name="price" required>
        <label class="form-label" for="discription">Discription</label>
        <textarea class="form-control mb-3" name="discription" id="discription" cols="30" rows="2" required></textarea>
        <button class="btn btn-success mb-3">Submit</button>
    </form>
</div>
    </div> 
    <a href="/campgrounds">All campgrounds</a>
